@model IEnumerable<Luncher.Core.Entities.Restaurant>
@{
    ViewData["Title"] = "Home Page";
}

<div>
    @foreach(var restaurant in Model)
    {
        <h2>@restaurant.Name</h2>
        <br />
        <h5>Polévky</h5>
        @foreach(var soap in restaurant.Menu.Soaps)
        {
           <div>@soap.Name</div> 
        }
        <br />

         <h5>Hlavní</h5>
        @foreach(var meal in restaurant.Menu.Meals)
        {
           <div>@meal.Name</div> 
        }

        <hr />
    }
</div>
